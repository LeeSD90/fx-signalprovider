<section id="contact" class="landing">
  <div align="center">
  <h3>Sign Up for a Trial</h3>

  <%= simple_form_for @landing, url: landing_index_path, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :phone, label: "Full Phone Number", :placeholder => '+14151234567' %>
    <%= f.input :call_me, as: :boolean, inline_label: 'Call me with information' %>
    <%= f.input :country %>
    <%= f.input :message, :as => :text %>

    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "submit" %>
    </div>
  <% end %>
  </div>
</section>
<% provide(:title, 'Welcome') %>
<!DOCTYPE html>
<html lang="en">
    <head>
		<%= csrf_meta_tags %>
			<title>Fx-Signalprovider | Welcome</title>
			<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
			<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    </head>
    <body>
    <div id="wrapper">
        <div id="top-line"></div>

        <!-- 960 Container -->
        <div class="container">
            <!-- Header -->
            <header id="header">
                <!-- Logo -->
                <div class="eight columns">
                    <div id="logo">
                        <h1><a href="#"><%= image_tag("fxlogo.png", id: "fx-logo", alt: "FX-SignalProvider") %></a></h1>
                        <div id="tagline">Trade less. Win big.</div>
                        <div class="clearfix"></div>
                    </div>
                </div>
                <!-- Social / Contact -->
                <div class="eight columns">

                    <!-- Social Icons -->
                    <ul class="social-icons">
                        <li class="twitter"><a href="#">Twitter</a></li>
                        <li class="facebook"><a href="#">Facebook</a></li>
                    </ul>

                    <div class="clearfix"></div>

                    <!-- Contact Details -->
                    <div class="contact text-right">
                    <i class="halflings white envelope"></i><a href="#"><span class="__cf_email__">support@fx-signalprovider.com</span></a>
                    </div>
                    <div class="clearfix"></div>

                </div>
            </header>
            <!-- Header / End -->

            <div class="clearfix"></div>

        </div>
        <!-- 960 Container / End -->
        <div class="bar-light"></div>
        <div class="clearfix"></div>
        <div class="container">
        <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
        <%= debug(params) if Rails.env.development? %>
        </div>
    </div>
    <!-- Footer
================================================== -->

<!-- Footer / Start -->
<footer id="footer">
	<!-- 960 Container -->
	<div class="container">

		<!-- About -->
		<div class="eight columns">
			<%= image_tag("fxlogo.png", id: "fx-logo", class: "sm", alt: "FX-SignalProvider") %>
			<p>Trade less. Win big.</p>

		</div>

	</div>
	<!-- 960 Container / End -->

</footer>
<!-- Footer / End -->


<!-- Footer Bottom / Start  -->
<footer id="footer-bottom">

	<!-- 960 Container -->
	<div class="container">

		<!-- Copyrights -->
		<div class="eight columns">
			<div class="copyright">
				Â© Copyright 2019 by <a href="#">fx-signalprovider</a>. All Rights Reserved.
			</div>
		</div>

	</div>
	<!-- 960 Container / End -->

</footer>
<!-- Footer Bottom / End -->
    </body>
</html>
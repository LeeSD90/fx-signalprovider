  </head>

  <body>
    <div class="divider"></div>
    <%= email_image_tag("fxlogo.png") %>
    <div id="title"><div id="subject"><%= @subject.capitalize %></div></div>
    <div id="container">
      <div class="divider"></div>
      <%= yield %>
      <div class="divider"></div>
    </div>
